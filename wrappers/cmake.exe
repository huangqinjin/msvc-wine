. $(dirname $0)/msvcenv.sh

if [ ! -d "$CMAKEDIR" ]; then
    echo "CMake is not installed. Please pass the --with-cmake option to vsdownload.py." >&2
    exit 1
fi

case ${ARCH} in
x86)
    Platform=Win32
    ;;
arm)
    Platform=ARM
    ;;
arm64)
    Platform=ARM64
    ;;
*)
    Platform=${ARCH}
    ;;
esac

if [ -z "$CMAKE_GENERATOR" ]; then
    export CMAKE_GENERATOR="Visual Studio 17 2022"
    export CMAKE_WINDOWS_KITS_10_DIR=$SDKBASE
    # CMake 3.31 or later is required for portable VS instances.
    export CMAKE_GENERATOR_INSTANCE=$BASE,version=17.0.0.0

    # https://cmake.org/cmake/help/latest/variable/CMAKE_GENERATOR_PLATFORM.html#visual-studio-platform-selection
    if [ -z "$WindowsSDKVersion" ]; then
        export CMAKE_GENERATOR_PLATFORM=$Platform,version=10.0
    else
        export CMAKE_GENERATOR_PLATFORM=$Platform
    fi
fi

export WINEPATH="$WINEPATH;Z:${CMAKEDIR//\//\\}\\Ninja"
export WINEDLLOVERRIDES=

export WINE_MSVC_RAW_STDOUT=1
$(dirname $0)/wine-msvc.sh $CMAKEDIR/CMake/bin/cmake.exe "$@"
